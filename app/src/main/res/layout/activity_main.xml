<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título de la aplicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="Marvel personajes"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Etiqueta para el nombre de el personaje -->
        <TextView
            android:id="@+id/labTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Nombre"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Etiqueta para la descripcion del personaje -->
        <TextView
            android:id="@+id/labDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion" />

        <!-- Imagen del póster del personaje -->
        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:paddingBottom="16dp"
            android:scaleType="fitCenter" />

        <!-- Campo de entrada para el nombre del personaje -->
        <EditText
            android:id="@+id/editTextMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Ingrese el nombre de el personaje"
            android:inputType="text" />

        <!-- Botón de búsqueda -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:text="Buscar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>